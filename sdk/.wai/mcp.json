{
  "version": "1.0",
  "name": "AI SDK MCP Configuration",
  "description": "Model Configuration Protocol for AI SDK",
  "models": [
    {
      "id": "openai-gpt-3.5-turbo",
      "name": "GPT-3.5 Turbo",
      "provider": "openai",
      "capabilities": ["text-generation", "chat"],
      "default": true
    },
    {
      "id": "openai-gpt-4",
      "name": "GPT-4",
      "provider": "openai",
      "capabilities": ["text-generation", "chat", "vision"],
      "default": false
    },
    {
      "id": "anthropic-claude-3",
      "name": "Claude 3",
      "provider": "anthropic",
      "capabilities": ["text-generation", "chat"],
      "default": false
    },
    {
      "id": "gemini-pro",
      "name": "Gemini Pro",
      "provider": "gemini",
      "capabilities": ["text-generation", "chat", "vision"],
      "default": false
    }
  ],
  "agents": [
    {
      "id": "default-assistant",
      "name": "Default Assistant",
      "model": "openai-gpt-3.5-turbo",
      "systemPrompt": "You are a helpful AI assistant."
    },
    {
      "id": "code-reviewer",
      "name": "Code Reviewer",
      "model": "openai-gpt-4",
      "systemPrompt": "You are an expert code reviewer."
    }
  ],
  "workflows": [
    {
      "id": "code-review",
      "name": "Code Review Workflow",
      "steps": [
        {
          "id": "analyze",
          "agent": "code-reviewer",
          "description": "Analyze the provided code"
        },
        {
          "id": "suggest",
          "agent": "code-reviewer",
          "description": "Provide suggestions for improvement"
        }
      ]
    }
  ]
}